# 数据库配置
# 支持的数据库类型: sqlite, mysql, postgres, mariadb
DB_TYPE=sqlite
DB_NAME=xh_axon
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=

# SQLite 专用配置
DB_STORAGE=./database/xh_axon.db

# 数据库连接池配置
DB_POOL_MAX=5
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# JWT 配置
JWT_SECRET=xh-axon-super-secret-key-change-in-production

# 服务器配置
PORT=3100
NODE_ENV=development

